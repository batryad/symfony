{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3 img-thumbnail" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Cat√©gories : {% for category in program.category %}
                    {{ category.name }}
                {% endfor %}</p>
            <div>
                <hr style="background-color: white">
                {% for season in seasons %}
                    <a href="{{ path('wild_show_season',{'id': season.id}) }}" style="display: inline-block; margin: 0 1em; text-decoration: none;">
                        <h5 style="color: white">Saison {{ season.id }}</h5>
                        <p>{{ season.year }}</p>
                        <hr style="background-color: white">
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Testing index() method from WildController to view all programs.
    </a>

{% endblock %}