{% extends 'base.html.twig' %}
{% block title %} All programs {% endblock %}
{% block body %}
    <h1 class="text-center color-yell mt-4">Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div class="mt-5">
            <h2 class="color-yell">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p class="color-whrite">{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à la page d'acceuil
    </a>
{% endblock %}